<launch>
  <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0.0045 0 .15 3.14159 0 0 base_link laser 100"/>
  <node pkg="tf" type="static_transform_publisher" name="link2_broadcaster" args="0 0 0 0 0 0 odom base_link 100"/>
  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <param name="/use_sim_time" value="false"/>

  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find cedi_pkg)/rviz_cfg/mapping_demo.rviz"/>

  <include file="$(find cedi_pkg)/launch/mapping_default.launch"/>

  <include file="$(find hector_geotiff)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

  <param name="use_sim_time" value="false" />
  <rosparam file="$(find cedi_pkg)/param/ros.yaml"/>

  <node name="Operator" pkg="nav2d_operator" type="operator" >
    <rosparam file="$(find cedi_pkg)/param/operator.yaml"/>
    <rosparam file="$(find cedi_pkg)/param/costmap.yaml" ns="local_map" />
  </node>
  
  <node name="RVIZ" pkg="rviz" type="rviz" args=" -d $(find cedi_pkg)/param/tutorial1.rviz" />

</launch>
